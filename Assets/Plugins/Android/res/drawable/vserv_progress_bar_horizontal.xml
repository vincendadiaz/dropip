<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#FFF29021"
                android:centerY="0.50"
                android:endColor="#FFF29021"
                android:startColor="#FFF29021" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="90"
                    android:endColor="#771997e1"
                    android:startColor="#770e75af" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="90"
                    android:endColor="#ffC8DD5D"
                    android:startColor="#ffC8DD5D" />
            </shape>
        </clip>
    </item>

</layer-list>